<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/main_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"

        android:id="@+id/custom_pub_item"
        card_view:cardPreventCornerOverlap="false"
>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/pub_item_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                />
                <TextView
                    android:id="@+id/pub_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/list_text_with_transparent_holder"
                    android:gravity="center"/>

            <ImageButton
                android:id="@+id/subscribe_to_pub"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/push_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_for_icons"
            />
        </RelativeLayout>

</android.support.v7.widget.CardView>
